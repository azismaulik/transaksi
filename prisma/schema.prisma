// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Barang {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    kode      String     @unique @db.VarChar(10)
    nama      String     @db.VarChar(100)
    harga     Decimal
    stok      Int
    diskon    Int
    salesDet  SalesDet[]
}

model Customer {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    kode      String   @unique @db.VarChar(10)
    name      String   @db.VarChar(100)
    telp      String   @db.VarChar(20)
    sales     Sales[]
}

model Sales {
    id          Int        @id @default(autoincrement())
    createdAt   DateTime   @default(now())
    kode        String     @unique @db.VarChar(15)
    tgl         DateTime
    customer    Customer   @relation(fields: [cust_id], references: [id])
    cust_id     Int
    subtotal    Decimal
    diskon      Int
    ongkir      Decimal
    total_bayar Decimal
    salesDet    SalesDet[]
}

model SalesDet {
    id            Int      @id @default(autoincrement())
    createdAt     DateTime @default(now())
    sales         Sales    @relation(fields: [sales_id], references: [id])
    sales_id      Int
    barang        Barang   @relation(fields: [barang_id], references: [id])
    barang_id     Int
    harga_bandrol Decimal
    qty           Int
    diskon_pct    Decimal
    diskon_nilai  Decimal
    harga_diskon  Decimal
    total         Decimal
}
